{
    "name": "vdfpack",
    "displayName": "vdfpack",
    "description": "Visual Dataflex goodies",
    "version": "0.0.1",
    "publisher": "hcss",
    "icon": "icon/DF_Logo.png",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:vdf",
        "onCommand:extension.IndentVDF"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.IndentVDF",
                "title": "VDF Indent"
            }
        ],
        "languages": [
            {
                "id": "vdf",
                "aliases": [
                    "VDF",
                    "vdf",
                    "Vdf"
                ],
                "extensions": [
                    ".vw",
                    ".rv",
                    ".sl",
                    ".dg",
                    ".src",
                    ".dd",
                    ".pkg",
                    ".mod",
                    ".cls",
                    ".CLS",
                    ".bpo",
                    ".rpt",
                    ".mnu",
                    ".cal",
                    ".con"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vdf",
                "scopeName": "source.vdf",
                "path": "./syntaxes/VDF.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "vdf",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
