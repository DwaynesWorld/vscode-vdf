{
  "name": "vls",
  "displayName": "VDF Language Server",
  "description": "Visual Dataflex Goodies",
  "version": "0.1.0",
  "publisher": "kt",
  "icon": "DF_Logo.png",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vdf",
    "onCommand:extension.IndentVDF"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.IndentVDF",
        "title": "VDF Indent"
      }
    ],
    "languages": [
      {
        "id": "vdf",
        "aliases": [
          "VDF",
          "vdf",
          "Vdf"
        ],
        "extensions": [
          ".vw",
          ".rv",
          ".sl",
          ".dg",
          ".src",
          ".dd",
          ".pkg",
          ".mod",
          ".cls",
          ".CLS",
          ".bpo",
          ".rpt",
          ".mnu",
          ".cal",
          ".con"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vdf",
        "scopeName": "source.vdf",
        "path": "./syntaxes/VDF.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "vdf",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.3.4",
    "mocha": "^5.2.0",
    "typescript": "^2.0.3",
    "vscode": "^1.1.18"
  }
}
