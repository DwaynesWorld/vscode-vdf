{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build Extension",
      "command": "npm",
      "isBackground": true,
      "type": "shell",
      "args": ["run", "compile", "--loglevel", "silent"],
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "build VDF Lexer",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/resources/vdflexer/vdfLexer.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": []
    }
  ]
}
